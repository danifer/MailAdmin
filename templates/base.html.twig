<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}MailAdmin{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">MailAdmin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_domain_index') }}">Domains</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_mail_account_index') }}">Mail Accounts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_mail_alias_index') }}">Mail Aliases</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="bg-white p-4 rounded shadow-sm">
            {% block body %}{% endblock %}
        </div>
    </div>
    
    <footer class="footer mt-5 py-3 bg-dark">
        <div class="container text-center">
            <span class="text-muted">MailAdmin Â© {{ "now"|date("Y") }}</span>
        </div>
    </footer>
</body>
</html>
