{% extends 'base.html.twig' %}

{% block title %}Domain{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Domain Details</h1>
        <a href="{{ path('app_domain_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover mb-0">
                <tbody>
                    <tr>
                        <th style="width: 200px;">ID</th>
                        <td>{{ domain.id }}</td>
                    </tr>
                    <tr>
                        <th>Domain Name</th>
                        <td>{{ domain.domainName }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('app_domain_edit', {'id': domain.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        {{ include('domain/_delete_form.html.twig') }}
    </div>
{% endblock %}
