{% extends 'base.html.twig' %}

{% block title %}Domain{% endblock %}

{% block body %}
    <h1>Domain</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ domain.id }}</td>
            </tr>
            <tr>
                <th>DomainName</th>
                <td>{{ domain.domainName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4">
        <a href="{{ path('app_domain_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_domain_edit', {'id': domain.id}) }}" class="btn btn-primary">Edit</a>
    </div>

    {{ include('domain/_delete_form.html.twig') }}
{% endblock %}
