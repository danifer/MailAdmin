{% extends 'base.html.twig' %}

{% block title %}Domain index{% endblock %}

{% block body %}
    <h1>Domain index</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Domain Management</h1>
        <a href="{{ path('app_domain_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Domain
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Domain Name</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for domain in domains %}
                <tr>
                    <td>{{ domain.id }}</td>
                    <td>{{ domain.domainName }}</td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_domain_show', {'id': domain.id}) }}" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('app_domain_edit', {'id': domain.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted py-4">No domains found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
