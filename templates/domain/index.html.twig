{% extends 'base.html.twig' %}

{% block title %}Domain index{% endblock %}

{% block body %}
    <h1>Domain index</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>DomainName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domain in domains %}
            <tr>
                <td>{{ domain.id }}</td>
                <td>{{ domain.domainName }}</td>
                <td>
                    <a href="{{ path('app_domain_show', {'id': domain.id}) }}" class="btn btn-sm btn-info">Show</a>
                    <a href="{{ path('app_domain_edit', {'id': domain.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_domain_new') }}">Create new</a>
{% endblock %}
