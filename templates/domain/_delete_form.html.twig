<form method="post" action="{{ path('app_domain_delete', {'id': domain.id}) }}" 
      onsubmit="return confirm('Warning: You are about to delete this domain.\n\nThis will also delete all associated mail accounts and aliases.\nThis action cannot be undone.\n\nAre you sure you want to continue?');"
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ domain.id) }}">
    <button class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
        <i class="fas fa-trash-alt mr-2"></i> Delete Permanently
    </button>
</form>
