{% extends 'base.html.twig' %}

{% block title %}Mail Accounts{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Mail Account Management</h1>
        <a href="{{ path('app_mail_account_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Account
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mail_account in mail_accounts %}
                <tr>
                    <td>{{ mail_account.id }}</td>
                    <td>{{ mail_account.email }}</td>
                    <td><span class="text-muted">••••••••</span></td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_mail_account_show', {'id': mail_account.id}) }}" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('app_mail_account_edit', {'id': mail_account.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">No mail accounts found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
