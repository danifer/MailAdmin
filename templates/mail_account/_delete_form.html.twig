<form method="post" action="{{ path('app_mail_account_delete', {'id': mail_account.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this mail account? This action cannot be undone.');"
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mail_account.id) }}">
    <button class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md">
        <i class="fas fa-trash mr-2"></i> Delete
    </button>
</form>
