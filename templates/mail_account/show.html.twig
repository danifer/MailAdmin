{% extends 'base.html.twig' %}

{% block title %}Mail Account Details{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold text-gray-900">Mail Account Details</h1>
        <a href="{{ path('app_mail_account_index') }}" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-md font-semibold text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
            <i class="fas fa-chevron-left mr-2"></i> Back to List
        </a>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <tbody class="divide-y divide-gray-200">
                <tr>
                    <th class="px-6 py-4 bg-gray-50 text-left text-sm font-medium text-gray-500 w-48">ID</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ mail_account.id }}</td>
                </tr>
                <tr>
                    <th class="px-6 py-4 bg-gray-50 text-left text-sm font-medium text-gray-500">Email</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ mail_account.email }}</td>
                </tr>
                <tr>
                    <th class="px-6 py-4 bg-gray-50 text-left text-sm font-medium text-gray-500">Password</th>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">••••••••</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex gap-3">
        <a href="{{ path('app_mail_account_edit', {'id': mail_account.id}) }}" 
           class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md">
            <i class="fas fa-edit mr-2"></i> Edit
        </a>
        {{ include('mail_account/_delete_form.html.twig') }}
    </div>
{% endblock %}
