{% block title %}MailAccount{% endblock %}

{% block body %}
    <h1>MailAccount</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mail_account.id }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ mail_account.password }}</td>
            </tr>
            <tr>
