{% extends 'base.html.twig' %}

{% block title %}Mail Account Details{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Mail Account Details</h1>
        <a href="{{ path('app_mail_account_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover mb-0">
                <tbody>
                    <tr>
                        <th style="width: 200px;">ID</th>
                        <td>{{ mail_account.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ mail_account.email }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td><span class="text-muted">••••••••</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('app_mail_account_edit', {'id': mail_account.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        {{ include('mail_account/_delete_form.html.twig') }}
    </div>
{% endblock %}
