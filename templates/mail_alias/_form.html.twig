{{ form_start(form, {'attr': {'class': 'space-y-6'} }) }}
    <div class="bg-white shadow rounded-lg">
        <div class="p-6 space-y-4">
            {% for field in form %}
                <div class="space-y-1">
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                    {{ form_errors(field, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>
            {% endfor %}
        </div>
        <div class="px-6 py-4 bg-gray-50 flex gap-3 rounded-b-lg">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md">
                <i class="fas fa-save mr-2"></i> {{ button_label|default('Save') }}
            </button>
            <a href="{{ path('app_mail_alias_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-md">
                <i class="fas fa-times mr-2"></i> Cancel
            </a>
        </div>
    </div>
{{ form_end(form) }}
